name = input("Enter your name: ")
hometown = input("Enter your hometown: ")

while True:
    try:
        age = int(input("Enter your age: "))
        break
    except ValueError:
        print("Please enter a number for age.")

person = {
    "Name": name,
    "Hometown": hometown,
    "Age": age
}

print(f"{person['Name']}\n{person['Hometown']}\n{person['Age']}") 
